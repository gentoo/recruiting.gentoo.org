= simple_form_for @question, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.association :group
  = f.association :category
  = f.input :reference
  = f.input :content
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), questions_path, :class => 'btn'
