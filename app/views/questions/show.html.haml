- model_class = Question
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @question.title
%p
  %strong= model_class.human_attribute_name(:reference) + ':'
  %br
  = @question.reference
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @question.content
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @question.user_id
%p
  %strong= model_class.human_attribute_name(:approved) + ':'
  %br
  = @question.approved

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), questions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_question_path(@question), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), question_path(@question), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
